{
  "name": "beaver-builder-webapp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "paraglide-js compile --project ./project.inlang && vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "vite": "vite",
    "postinstall": "paraglide-js compile --project ./project.inlang",
    "compile": "paraglide-js compile --project ./project.inlang",
    "watch": "paraglide-js compile --project ./project.inlang --watch"
  },
  "devDependencies": {
    "@floating-ui/dom": "1.5.3",
    "@inlang/paraglide-js": "1.0.0-prerelease.20",
    "@inlang/paraglide-js-adapter-vite": "^1.0.3",
    "@playwright/test": "^1.40.1",
    "@skeletonlabs/skeleton": "2.6.1",
    "@skeletonlabs/tw-plugin": "0.3.0",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.30.3",
    "@tailwindcss/forms": "0.5.7",
    "@tailwindcss/typography": "0.5.10",
    "@tiptap/core": "^2.1.13",
    "@tiptap/pm": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "iconify-icon": "^1.0.8",
    "postcss": "8.4.32",
    "postcss-nesting": "^12.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-dnd-action": "^0.9.37",
    "sveltekit-superforms": "^1.13.1",
    "tailwindcss": "3.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vite-plugin-tailwind-purgecss": "0.2.0",
    "vitest": "^1.1.0",
    "zod": "^3.22.4"
  },
  "type": "module"
}